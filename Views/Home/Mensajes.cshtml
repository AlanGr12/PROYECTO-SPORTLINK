  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>

<body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<header>
    <img src="/Imagenes/logo.png" alt="Sportlink">
    <nav>
        <ul>
            <li><a href='@Url.Action("irPruebas", "Home")'>Pruebas</a></li>
            <li><a href='@Url.Action("irVideos", "Home")'>Videos</a></li>
            <li><a href='@Url.Action("irMensajes", "Home")'>Mensajes</a></li>

            @if (ViewBag.Usuario != null && ViewBag.Usuario.FotoPerfil != null)
            {
                <img class="fotoUsuario" src="@ViewBag.Usuario.FotoPerfil" alt="Foto de perfil">
            }
            else
            {
                <a href='@Url.Action("irUser", "Session")'><img src="/Imagenes/inicio.png"></a>
            }
        </ul>
    </nav>
</header>


<!-- --------------------------- -->
<!--         MENSAJES VIEW       -->
<!-- --------------------------- -->
<section class="mensajesview">

    <div class="container-fluid vh-100">
        <div class="row h-100">

            <!-- LISTA DE MENSAJES -->
            <section class="col-3 border-end p-0 bg-white">

                <div class="p-3 fw-bold text-center" style="color:#000000;">MENSAJES</div>

                <div class="px-3 mb-3">
                    <div class="position-relative">
                        <input class="form-control rounded-pill" placeholder="Buscar..." />
                        <i class="bi bi-search"
                           style="position:absolute; right:15px; top:50%; transform:translateY(-50%); font-size:18px;">
                        </i>
                    </div>
                </div>

                <div class="list-group list-group-flush">

                    <!-- EJEMPLO DE ITEMS -->
                    <a class="list-group-item list-group-item-action chat-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center gap-2">
                                <h5>FELIPE GONZALEZ.</h5>
                                <h4>SCOUT</h4>
                            </div>
                            <h6>20:30</h6>
                        </div>
                        <div class="small text-muted">Te cuento lo que encontré…</div>
                    </a>

                </div>

            </section>


            <!-- CHAT DERECHO -->
            <div class="col-9 d-flex flex-column p-0" style="background:#F8F8F8;">                

                <!-- HEADER CHAT -->
                <div class="p-3 border-bottom d-flex align-items-center gap-3 bg-white">
                    <div class="rounded-circle" style="width:50px;height:50px;background:#00E3CC;"></div>
                    <h5 class="m-0">Rafael Mendez</h5>
                </div>

                <!-- CUERPO DEL CHAT -->
                <div class="flex-grow-1 p-3 overflow-auto">

                    <div class="d-flex mb-3">
                        <div class="p-2 rounded-3"
                             style="max-width:60%;background:#FFFFFF;border:1px solid #E0E0E0;">
                            Hola Leo! ¿Cómo va?
                        </div>
                    </div>

                    <div class="d-flex mb-3">
                        <div class="p-2 rounded-3"
                             style="max-width:60%;background:#FFFFFF;border:1px solid #E0E0E0;">
                            Vimos tu último video y nos quedamos impresionados...
                        </div>
                    </div>

                    <div class="d-flex mb-3">
                        <div class="rounded-3 border bg-white" style="max-width:60%;">
                            <img src="img/imgnPrueba.png" class="img-fluid rounded-top">
                            <div class="p-2 text-center">
                                <h6 class="m-0">TALLERES</h6>
                                <small style="color:#00E3CC;">FÚTBOL</small>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mb-3">
                        <div class="p-2 rounded-3 text-white"
                             style="max-width:60%;background:#00E3CC;">
                            Muchas gracias Raf! Con gusto asistiré a la prueba.
                        </div>
                    </div>

                </div>

                <!-- INPUT -->
                <div class="p-3 border-top bg-white d-flex gap-2">
                    <input class="form-control" placeholder="Escribe un mensaje...">
                    <button class="btn text-white" style="background:#00E3CC;">Enviar</button>
                </div>

            </div>

        </div>
    </div>

</section>


<!-- FOOTER -->
<footer>
    <div>
        <img src="/Imagenes/logo.png" alt="Sportlink">
        <p>
            Conectando el talento joven con su futuro profesional.<br>
            Damos visibilidad a tu talento y les abrimos las puertas<br>
            a nuevas oportunidades
        </p>
    </div>

    <div>
        <h3>Explorá</h3>
        <ul>
            <li><a href='@Url.Action("Index", "Home")'>Inicio</a></li>
            <li><a href='@Url.Action("irVideos", "Home")'>Videos</a></li>
            <li><a href='@Url.Action("irPruebas", "Home")'>Pruebas</a></li>
        </ul>
    </div>

    <div>
        <h3>Seguinos</h3>
        <div class="redes">
            <img src="/Imagenes/ig.png" alt="Instagram">
            <img src="/Imagenes/tw.png" alt="X">
        </div>
        <h3>Contacto</h3>
        <p>
            email: sportlink@gmail.com<br>
            teléfono: +54 0000 0000
        </p>
    </div>
</footer>

</body>
</html>
