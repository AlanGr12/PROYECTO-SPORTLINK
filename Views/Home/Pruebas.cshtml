@{
    ViewData["Title"] = "Pruebas";
    var pruebas = ViewBag.Pruebas;
}

<head>
</head>



<body>



  <main>
  <section class="Pruebastitulo">
     <h1>Pruebas Subidas</h1>
            @if (ViewBag.TipoUsuario == "scout")
{
    <button>
        <a href='@Url.Action("irSubirPrueba", "Home")'>SUBIR</a>
    </button>
}
  </section>
    <section class= "pruebasSubidas"> 


    @for (int i = 0; i < ViewBag.Pruebas.Count; i++)
{
   
    var prueba = ViewBag.Pruebas[i];
    <div>
    <img src= "/@prueba.Imagen" alt="Foto Prueba">
    <h5>Deporte:</h5>
    <h6> @prueba.Deporte</h6>
    <h5>Categoria:</h5> 
    <h6>@prueba.Categoria</h6>
    <h5>Fecha de la prueba:</h5> 
    <h6>@prueba.fechaPrueba</h6>
    <h5>Club:</h5> 
    <h6>@prueba.Nombre</h6>
     @if (ViewBag.TipoUsuario == "jugador" && ViewBag.Usuario.idJugador != null )
     {
    <form action='@Url.Action("inscribirsePrueba","Home")' method="post">
       <input type="hidden" name="idPrueba" value="@prueba.idPrueba" />
       <input type="hidden" name="idJugador" value="@ViewBag.Usuario.idJugador" />
       @if(ViewBag.Pruebas[i].inscripto)
       {
        <h3 class= "errorInscripcion">Ya estas inscripto en esta prueba</h3>
       }else{
        <button type="submit">Inscribirse</button>
       }
   
    </form>
     }
    </div>
    
    
}

    
    </section>
    
</main>


         <footer>
    <div>
      <img src="/Imagenes/logo.png" alt="Sportlink">
      <p>
        Conectando el talento joven con su futuro profesional.<br>
        Damos visibilidad a tu talento y les abrimos las puertas<br>
        a nuevas oportunidades
      </p>
    </div>
  
    <div>
      <h3>Explorá</h3>
      <ul>
        <li><a href='@Url.Action("Index", "Home")'>Inicio</a></li>
        <li><a href='@Url.Action("irVideos", "Home")'>Videos</a></li>
        <li><a href='@Url.Action("irPruebas", "Home")'>Pruebas</a></li>
      </ul>
    </div>
  
    <div>
      <h3>Seguinos</h3>
      <div class="redes">
        <img src="img/ig.png" alt="Instagram">
        <img src="img/tw.png" alt="X">
      </div>
      <h3>Contacto</h3>
      <p>
        email: sportlink@gmail.com<br>
        teléfono: +54 0000 0000
      </p>
    </div>
  </footer>

</body>
