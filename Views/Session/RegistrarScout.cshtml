<h1>Ingrese sus datos como scouter</h1>

<form action='@Url.Action("GuardarRegistroScout","session" )' method= "post" enctype="multipart/form-data">

<div class ="ladoIzq">
<h2>Usuario</h2>
<input type="text" name="Usuario" placeholder="Ingresar Username" required/>
<h2>Contraseña</h2>
<input type="password" name="Contraseña" placeholder="Ingresar Contraseña" required/>
<h2>Nombre</h2>
<input type="text" name="Nombre" placeholder="Ingresar Nombre" required/>
<h2>Apellido</h2>
<input type="text" name="Apellido" placeholder="Ingresar Apellido" required/>
</div>
<div class ="ladoDer">
<h2>Telefono</h2>
<input type="text" name="Telefono" placeholder="Ingresar numero de telefono" required/>  
<h2>Foto de Perfil</h2>
<input type="file" name="FotoPerfil" placeholder="Ingresar foto de perfil" accept=".png, .jpg, .jpeg, .webp, .avif" required />
<h2>Email</h2>
<input type="email" name="Email" placeholder="Ingresar correo de mail" required/>
<h2>Club</h2>
<select name="idClub" required>
    @foreach (var club in ViewBag.Clubes)
    {
        <option value="@club.idClub">@club.Nombre</option>
    }
</select>
</div>
    
<button><a href='@Url.Action("irLogInScout", "Session")'>Registrarme</a></button>

    </form>
    
